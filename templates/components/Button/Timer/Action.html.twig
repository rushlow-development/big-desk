{% props svg, color, position = 'default' %}

{% set position_class = cva({
    variants: {
        position: {
            top: 'position-absolute mt-2 me-2 top-0 end-0',
            bottom: 'position-absolute mb-2 me-2 bottom-0 end-0',
            default: ''
        }
    }
}) %}

<button
    {{ attributes.defaults({class: 'btn btn-sm text-' ~ color ~ ' ' ~ position_class.apply({position})}) }}
>
    {{ include('svg/' ~ svg ~ '.html.twig') }}
</button>
