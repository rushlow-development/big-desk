{% extends 'base.html.twig' %}

{% block title %}Note{% endblock %}

{% block body %}
    <h1>Note</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ note.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ note.content }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ note.id }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_note_index') }}" class="btn btn-outline-secondary">back to list</a>

    <a href="{{ path('app_note_edit', {'id': note.id}) }}" class="btn btn-outline-info">edit</a>

    {{ include('note/_delete_form.html.twig') }}
{% endblock %}
